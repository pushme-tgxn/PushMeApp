{
    "cli": {
        "version": ">= 2.9.0"
    },
    "build": {
        "develop": {
            "distribution": "internal",
            "developmentClient": true,
            "env": {
                "ENVIRONMENT": "develop"
            }
        },
        "preview": {
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            },
            "env": {
                "ENVIRONMENT": "preview"
            }
        },
        "production": {
            "distribution": "store",
            "env": {
                "ENVIRONMENT": "production"
            }
        }
    },
    "submit": {
        "production": {}
    }
}
